@model List<ApplicationUser>
@{
    ViewBag.Title = "Admin's page";
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-info" style="text-align:center">
        @TempData["msg"]
        <button type="button" class="btn btn-close" data-bs-dismiss="alert" style="float:right">
            @* <span>&times;</span>*@
        </button>

    </div>
}

<table class="col-9" style="text-align:center" width="100%">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Manage</th>

        </tr>
    </thead>
    <tbody style="font-size:larger">
        @foreach (var m in Model)      
        {
            <tr>                
                <td>@m.ProfilePicture</td>
                <td>@m.Name </td>
                <td>@m.UserName</td>
                <td>@m.Email</td>
                <td>@m.</td>
                <td>
                    <div class="" role="">
                        <a asp-page="/Admin/Prom" asp-route-id="@m.Id" class="">
                            <i class="">Promote to admin</i>
                        </a>
                    </div>
                </td>
                <td>
                    <div class="W-75 btn-group" role="group">
                        <a asp-page="/Admin/details" asp-route-id="@m.Id" class="btn btn-primary mx-2">
                            <i class="">Info</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</br>
<div class="" role="">
    <form asp-action="ClearDataWithoutApplicationUserId" method="get">
        <input type="submit" value="Clear data without userId" class="btn btn-danger" />
    </form>
</div>