@model List<MajorDecision.Web.Models.Answers>

@{
    ViewBag.Title = "Answers page";
}

@if (TempData["msg"] != null)
{
    <div class="alert alert-info" style="text-align:center">
        @TempData["msg"]
        <button type="button" class="btn btn-close" data-bs-dismiss="alert" style="float:right">
            @* <span>&times;</span>*@
        </button>
    </div>
}
<div>
    <div class="row pt-4">
        <div class="col-3">
            <a asp-action="DisplayUsers" class="btn btn-secondary">Back</a>
        </div>
        <div class="col-3">
            <h2 class="text">Answers</h2>
        </div>
        
        <div class="col-3">
            <a asp-controller="Admin" asp-action="AddAnswerSentence" class="btn btn-secondary">Add answer</a>
        </div>
    </div>
</div>
</br>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover table-striped" style="text-align:center" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Answer</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var answers in Model)
            {
                <tr>
                    <td width="10%">@answers.Id</td>
                    <td width="80%">@answers.Answer</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="Manage" asp-route-id="@answers.Id" class="btn btn-outline-danger">Edit/Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

}
else
{
    <p class="text-center"><b>No answers</b></p>
}
