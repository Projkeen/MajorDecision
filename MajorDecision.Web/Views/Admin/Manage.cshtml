@model Answers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Manage answer";
}
@if (TempData["msg"] != null)
{
    <div class="alert alert-info" style="text-align:center">
        @TempData["msg"]
        <button type="button" class="btn btn-close" data-bs-dismiss="alert" style="float:right">
            @* <span>&times;</span>*@
        </button>
    </div>
}
<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-5">
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Manage answer</h2>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="Answer">Answer</label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="mb-3">
            <a asp-action="DisplayAnswers" class="btn btn-secondary">Back</a>
            <button type="submit" asp-action="EditAnswerSentence" class="btn btn-secondary">Edit</button>
            <button type="submit" asp-action="DeleteAnswerSentence" class="btn btn-danger">Delete</button>
        </div>
    </div>
</form>


