@{
    ViewData["Title"] = "Adding answer";
}
<form asp-action="AddAnswerSentence" method="get">
    <div class="border p-5">
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add new answer</h2>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <label asp-for="Answer">Answer</label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
        </div>     
        <br />
        <div class="mb-3">
            <a asp-action="DisplayAnswers" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Confirm</button>
        </div>
    </div>
</form>


