@model MajorDecision.Web.Models.Authentication.Registration
@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
</head>
<body>
    <div class="container">
        <div class="md-6">
            <form asp-action="Registration" method="post">
                @if (TempData["msg"] != null)
                {
                    <div class="alert alert-info" style="text-align:center">
                        @TempData["msg"]
                        <button type="button" class="btn-close" data-dismiss="alert" style="float:right">
                            <span>&times;</span>
                        </button>

                    </div>
                }
                <h2>Registration</h2>
                <div class="form-label">
                    <label class="form-label">FirstName</label>
                    <input type="text" class="form-control" style="width:250px" asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>

                <div class="form-label">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" style="width:250px" asp-for="Username" />
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>

                <div class="form-label">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" style="width:250px" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

              @*   <div class="form-label">
                    <label class="form-label">Permission</label>
                    <input type="password" class="form-control" style="width:250px" asp-for="SecretPassword" />
                    <span class="text-danger" asp-validation-for="SecretPassword"></span>
                </div> *@

                <div class="form-label">
                    <label class="form-label">Sign Up as:</label>
                    <select id="addInputFieldForAdminPerm">
                        <option> User</option>
                        <option value="Adm"> Admin</option>
                    </select>
                    <br />
                    <input type="password" asp-for="SecretPassword" class="form-control" style="width:250px; display:none" id="additionalInput" ; placeholder="You must enter the secret code" />
                </div>                

                <div class="form-label">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" style="width:250px" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-label">
                    <label class="form-label">Password Confirm</label>
                    <input type="password" class="form-control" style="width:250px" asp-for="PasswordConfirm" />
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                </div>
                
                <button type="submit" class="btn btn-primary">Confirm</button>
                <a class="btn btn-secondary" href="/Authentication/Login">Log In</a>

            </form>
        </div>

    </div>
</body>
</html>
<script>
    const selectElement = document.getElementById("addInputFieldForAdminPerm");
    const inputField = document.getElementById("additionalInput");

    selectElement.addEventListener("change", (event) => {
        if (event.target.value === "Adm") {
            inputField.style.display = "inline-block";
        } else {
            inputField.style.display = "none";
        }
    });
</script>